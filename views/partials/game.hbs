<div class="row">

    <div id="board" class="col-md-7" data-token="{{ token }}" data-role="{{ role }}"></div>

    <div class="modal fade" id="GameUrlPush" tabindex="-1" role="dialog" aria-hidden="true" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        Game Invite URL
                    </h4>
                </div>
                <div class="modal-body">
                    <p>You can use this URL to invite your friend to join this game</p>
                    <p><span class="text-info" id="gameURL"></span></p>
                </div>
                <div class="modal-footer">
                    <a href="/" class="btn btn-danger">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="game_detail" class="col-md-4 col-md-offset-1">
        <div class="panel panel-info">
            <div class="panel-heading">
                Players
            </div>
            <div class="panel-body">
                <p>
                    <img src="/images/bK.png" class="side-img" alt="Black"/>
                    <span id="player-black"></span>
                    <span class="turn" id="turn-b">&nbsp;<i class=""></i></span>
                    <span id="timeb">{{time}}</span>
                </p>
                <p>
                    <img src="/images/wK.png" class="side-img" alt="White"/>
                    <span id="player-white"></span>
                    <span class="turn" id="turn-w">&nbsp;<i class=""></i></span>
                    <span id="timew">{{time}}</span>
                </p>
            </div>
        </div>

        <div class="panel panel-info">
            <div class="panel-heading">
                <h4 class="panel-title">
                    Movements
                </h4>
            </div>
            <div class="panel-body">
                <textarea id="pgn"></textarea>
            </div>
            <div class="panel-footer">
                <button class="btn btn-danger center-block" type="button" id="resign_button">
                    Resign
                </button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="GameResultPush" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        Game Over
                    </h4>
                </div>
                <div class="modal-body">
                    <p id="gameResult"></p>
                </div>
                <div class="modal-footer">
                    <a href="/" class="btn btn-danger">
                        Return
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>