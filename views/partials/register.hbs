<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Sign up</h3>
            </div>
            <form role="form" method="post" action="/register">
                <div class="panel-body">
                    <div class="panel-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" autofocus required>
                    </div>
                    <div class="panel-group">
                        <input type="text" class="form-control" name="user_name" placeholder="User Name" autofocus required>
                    </div>
                    <div class="panel-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <div class="panel-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" required>
                    </div>
                </div>
                <div class="panel-footer">
                    <p>
                        <button type="submit" class="btn btn-default center-block">
                            Submit
                        </button>
                    </p>
                    <p class="text-center">
                        You have already an account? login <a href="/login">here</a>
                    </p>
                </div>
            </form>
        </div>
        <div id="registerError" hidden="hidden">{{ error }}</div>
    </div>
</div>